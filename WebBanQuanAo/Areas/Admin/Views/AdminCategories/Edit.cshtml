@model WebBanQuanAo.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" style='color:blueviolet'>Danh mục sản phẩm</a>
                <span class="breadcrumb-item active">Chỉnh sửa danh mục sản phẩm</span>
            </nav>
        </div>
    </div>
    <div class="page-header">
        <div class="col-lg-7 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="col">
                        <h4 class="card-title" style="color: black; text-align: center">Chỉnh sửa danh mục sản phẩm</h4>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CatId" />
                            <div class="form-group">
                                <label asp-for="CatName" class="control-label">Tên danh mục sản phẩm</label>
                                <input asp-for="CatName" class="form-control" required/>
                                <span asp-validation-for="CatName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Mô tả</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>                          
                            <div class="form-group" style="text-align:center">
                                <div class="template-demo mt-2">
                                    <button type="submit" class="btn btn-outline-primary btn-icon-text">
                                        <i class="mdi mdi-file-check btn-icon-prepend"></i> Lưu
                                    </button>
                                    <button type="reset" class="btn btn-outline-warning btn-icon-text">
                                        <i class="mdi mdi-reload btn-icon-prepend"></i> Trở lại
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
