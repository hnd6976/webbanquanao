@model WebBanQuanAo.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" style='color:blueviolet'>Quản lý tài khoản</a>
                <span class="breadcrumb-item active">Chi tiết tài khoản</span>
            </nav>
        </div>
    </div>
    <div class="page-header">
        <div class="col-lg-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title" style="color: black">Thông tin tài khoản</h4>
                    <table class="table">
                        <tbody style="color: black">
                            <tr>
                                <td>ID:</td>
                                <td>@Model.AccountId</td>
                            </tr>
                            <tr>
                                <td>Họ tên:</td>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <td>Số điện thoại:</td>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <td>Quyền truy cập:</td>
                                <td>@Model.Role.RoleName</td>
                            </tr>
                            <tr>
                                <td>Trạng thái:</td>
                                <td>@Model.Active</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
