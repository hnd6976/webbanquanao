@model WebBanQuanAo.Models.Account

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" style='color:blueviolet'>Quản lý tài khoản</a>
                <span class="breadcrumb-item active">Xóa tài khoản</span>
            </nav>
        </div>
    </div>
    <div class="page-header">
        <div class="col-lg-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="color: black">Xác nhận xóa tài khoản?</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>ID:</td>
                                <td>@Model.AccountId</td>
                            </tr>
                            <tr>
                                <td>Họ tên:</td>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <td>Số điện thoại:</td>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <td>Vai trò:</td>
                                <td>@Model.Role.RoleName</td>
                            </tr>
                            <tr>
                                <td>Trạng thái:</td>
                                <td>@Model.Active</td>
                            </tr>
                        </tbody>
                    </table>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="RoleId" />
                        <div class="form-group" style="text-align:center">
                            <div class="template-demo mt-2">
                                <button type="submit" class="btn btn-inverse-danger btn-icon-text">
                                    <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
