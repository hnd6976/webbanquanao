@model WebBanQuanAo.Models.Page

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index" style='color:blueviolet'>Tin tức</a>
                <span class="breadcrumb-item active">Tạo mới tin tức</span>
            </nav>
        </div>
    </div>
    <div class="page-header">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h4 class="card-title" style="color: black; text-align: center">Tạo mới tin tức</h4>
                            <form asp-controller="AdminPages" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label">Tên tin tức</label>
                                    <input asp-for="Title" class="form-control" placeholder="Nhập tên tin tức" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AuthorName" class="control-label">Tác giả</label>
                                    <input asp-for="AuthorName" class="form-control" placeholder="Nhập tên tác giả" required />
                                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Contents" class="control-label">Nội dung</label>
                                    <textarea rows="5" asp-for="Contents" class="form-control" placeholder="Nhập nội dung" required></textarea>
                                    <span asp-validation-for="Contents" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Thumb" class="control-label">Hình ảnh</label>
                                    <div>
                                        <input asp-for="Thumb" name="fThumb" type="file" class="form-control-file" />
                                    </div>
                                    <span asp-validation-for="Thumb" class="text-danger"></span>
                                </div>
                            
                                <div class="form-group" style="text-align:center">
                                    <div class="template-demo mt-2">
                                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                                            <i class="mdi mdi-folder-plus btn-icon-prepend"></i> Tạo mới
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


