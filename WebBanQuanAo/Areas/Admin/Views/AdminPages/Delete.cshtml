@model WebBanQuanAo.Models.Page

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index" style='color:blueviolet'>Tin tức</a>
                <span class="breadcrumb-item active">Xóa tin tức</span>
            </nav>
        </div>
    </div>
    <div class="page-header">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="color: black">Xác nhận xóa tin tức?</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td width="150">ID:</td>
                                <td>@Model.PageId</td>
                            </tr>
                            <tr>
                                <td>Tên tin tức:</td>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <td>Tác giả:</td>
                                <td>@Model.AuthorName</td>
                            </tr>
                            <tr>
                                <td>Nội dung:</td>
                                <td><textarea rows="5" style="width:700px" readonly>@Model.Contents</textarea></td>
                            </tr>
                            <tr>
                                <td>Hình ảnh:</td>
                                <td>@Model.Thumb</td>
                            </tr>
                            <tr>
                                <td>Ngày tạo:</td>
                                <td>@Model.CreateDate</td>
                            </tr>
                          
                        </tbody>
                    </table>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PageId" />
                        <div class="form-group" style="text-align:center">
                            <div class="template-demo mt-2">
                                <button type="submit" class="btn btn-inverse-danger btn-icon-text">
                                    <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
