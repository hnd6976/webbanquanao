@model WebBanQuanAo.Models.OrderDetail

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home" style='color:blueviolet'></i></a>
            <span class="breadcrumb-item active">Trang chủ</span>
        </nav>
    </div>
</div>


<div class="content-wrapper">
    <div class="row">
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-danger card-img-holder text-white">
                <div class="card-body">
                    @*<img src="assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />*@
                    <h5 class="font-weight-normal mb-3">
                        Tổng doanh thu <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                    </h5>
                    <h4 class="mb-5">@ViewBag.TongDoanhThu.ToString("#,##0") VNĐ</h4>
                    <h6 class="card-text">Tăng 60%</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-info card-img-holder text-white">
                <div class="card-body">
                    <h5 class="font-weight-normal mb-3">
                        Tổng sô hóa đơn <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                    </h5>
                    <h3 class="mb-5">@ViewBag.TongDonDangKy</h3>
                    <h6 class="card-text">Tăng 10%</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-success card-img-holder text-white">
                <div class="card-body">
                    <h5 class="font-weight-normal mb-3">
                        Tổng số khách hàng <i class="mdi mdi-diamond mdi-24px float-right"></i>
                    </h5>
                    <h3 class="mb-5">@ViewBag.TongHocVien</h3>
                    <h6 class="card-text">Tăng 5%</h6>
                </div>
            </div>
        </div>
    </div>
</div>
